<plugin>
  <groupId>com.github.spotbugs</groupId>
  <artifactId>spotbugs-maven-plugin</artifactId>
  <version>4.0.0</version>
  <configuration>
    <effort>Max</effort>
    <threshold>Low</threshold>
    <xmlOutput>true</xmlOutput>
  </configuration>
  <executions>
   <execution>
     <goals>
       <goal>check</goal>
     </goals>
   </execution>
 </executions>
  <dependencies>
    <dependency>
        <groupId>com.github.spotbugs</groupId>
        <artifactId>spotbugs</artifactId>
        <version>4.0.3</version>
    </dependency>
  </dependencies>
</plugin>
